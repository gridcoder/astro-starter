---
import { getLocale } from "astro-i18n-aut"
import { ViewTransitions } from "astro:transitions"
import BaseHead from "@components/BaseHead.astro"
import NavigationContainer from "@src/components/NavigationContainer.astro"
import Footer from "@components/Footer.astro"
import { SITE_TITLE, SITE_DESCRIPTION } from "@src/consts"
import ContactModal from "@components/ContactModal.astro"

const locale = getLocale(Astro.url)

// replaced dynamically
const buildDate = new Date(__DATE__)

type Props = {
	title?: string
	description?: string
	image?: string
}

const { image, title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props as Props
---

<html lang={locale}>
	<head>
		<BaseHead title={title} description={description} image={image} />
		{/* Comment the line below if you want to remove client side routing */}
		<ViewTransitions />
	</head>

	<body class="flex flex-col items-center m-0 p-0 transition-all duration-300">
		<NavigationContainer />
		<slot name="hero-section" />
		<main id="main-content" class="pt-10 px-10 w-full max-w-5xl">
			<slot />
		</main>
		<Footer {buildDate} showSocial={false} includeTime={true} />
		<ContactModal />
	</body>
</html>

<style>
	:global(#main-content a) {
		@apply link text-secondary;
	}

	:global(#main-content ul) {
		@apply list-disc list-outside pl-10 leading-loose;
	}

	:global(#main-content ul > li::marker) {
		@apply text-secondary text-lg;
	}
</style>
