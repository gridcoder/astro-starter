---
import HeroImage from "./blog/HeroImage.astro"

interface Props {
  organizations: {
    name: string;
    logo: string;
    href: string;
  }[];
}

const { organizations } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 py-8">
  {
    organizations.map((org) => (
      <a
        href={org.href}
        class="flex flex-col items-center p-6 transition-all hover:scale-105 bg-base-100 rounded-lg shadow-md hover:shadow-lg"
      >
        <div class="w-48 h-32 relative">
          <HeroImage
            src={org.logo}
            alt={`${org.name} logo`}
            class="object-contain w-full h-full"
            width={192}
            height={128}
          />
        </div>
        <h3 class="mt-4 text-center text-primary font-medium">{org.name}</h3>
      </a>
    ))
  }
</div>
