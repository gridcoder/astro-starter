---
import Layout from "@layouts/Layout.astro"
import HeroSection from "@src/components/HeroSection.astro"
---

<Layout>
  <HeroSection slot="hero-section" backgroundImageUrl="/images/hero_background.webp">
    <div class="flex justify-center">
      <h1 class="text-4xl sm:text-6xl text-base-100 dark:text-primary">CONTACT & MAILINGLIJST</h1>
    </div>
  </HeroSection>

  <h2 class="mt-3 text-2xl text-primary font-medium">
    <span class="pt-1 px-1 box-decoration-clone bg-base-100/80 dark:bg-transparent">
      Neem hieronder contact op met het Implementatieteam Corporate Governance
    </span>
  </h2>

  <div class="w-full">
    <form
      name="corpgov-contact-form"
      action="/form-success"
      class="flex flex-col md:flex-row justify-center items-stretch px-4 py-8 w-full h-full gap-5 md:gap-14"
      method="POST"
      netlify
    >
      <div class="md:basis-1/2 w-full">
        <div class="mb-4">
          <label class="block text-primary text-sm font-bold mb-2" for="first-name"> Voornaam</label>
          <input class="w-full py-2 px-3" name="first-name" type="text" required autofocus />
        </div>

        <div class="mb-4">
          <label class="block text-primary text-sm font-bold mb-2" for="last-name"> Achternaam</label>
          <input class="w-full py-2 px-3" name="last-name" type="text" required />
        </div>

        <div class="mb-4">
          <label class="block text-primary text-sm font-bold mb-2" for="organisation"> Organisatie</label>
          <input class="w-full py-2 px-3" name="organisation" type="text" required />
        </div>

        <div class="">
          <label class="block text-primary text-sm font-bold mb-2" for="email"> Email</label>
          <input class="w-full py-2 px-3" name="email" type="email" placeholder=" " required />
        </div>
      </div>

      <div class="md:basis-1/2 w-full flex flex-col">
        <div class="flex flex-col flex-1 mb-6">
          <label class="text-primary text-sm font-bold mb-2" for="message"> Bericht</label>
          <textarea class="flex-1 py-2 px-3 min-h-40" name="message" required></textarea>
        </div>

        <div class="flex items-center justify-between">
            <label class="label cursor-pointer gap-2">
                <input type="checkbox" class="checkbox checkbox-md checkbox-primary bg-white rounded-md" />
                <span class="label-text sm:text-lg text-primary">Aanmelden voor de mailinglijst</span>
            </label>
            <button class="bg-secondary text-base-100 font-bold shadow-md dark:text-primary" type="submit"> Verzenden </button>
        </div>
      </div>
    </form>
  </div>
</Layout>

<style>
  input[type="text"],
  input[type="email"],
  textarea {
    @apply input input-bordered bg-white text-primary leading-tight focus:input-secondary;
  }
</style>
