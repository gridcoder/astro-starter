  <div
    slot="hero-section"
    class="w-full h-[50vh] sm:h-[40vh] flex justify-center items-center relative xl:bg-cover bg-top bg-fixed"
    style="background-image: url(/images/hero_background.webp)"
  >
    <div class="absolute inset-0 bg-black/50 z-0 backdrop-blur-sm"></div>

    <!-- <div class="pt-24 sm:pt-10 px-10 w-full max-w-5xl"> -->
    <div class="px-10 w-full max-w-5xl z-10">
      <div class="flex flex-col md:flex-row justify-between mt-28">
        <div class="flex flex-col justify-center">
          <h1 class="text-6xl text-base-100 dark:text-primary">Corporate Governance</h1>
          <h2 class="text-secondary">
            Officiële website van het Implementatieteam Corporate Governance Aruba
          </h2>
        </div>
        <!-- <div class="w-full">
          <HeroImage
            class="mb-2 w-full"
